{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "options": {
        "extensions": [".ts", ".tsx"]
      }
    },
    "typeCheck": true,
    "assets": [
      {
        "include": "generated/**/*",
        "watchAssets": true
      },
      {
        "include": "graphql/**/*.graphql",
        "watchAssets": true
      }
    ]
  }
}
